        // --- API Configuration ---
        const API_BASE_URL = (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') 
            ? 'http://localhost:3000/api' 
            : 'https://api.gardenbuddy.app';
        let authToken = localStorage.getItem('gb_token');

        // Extended garden memory
        let gardenMemory = {
            teachings: [],
            corrections: [],
            gists: [],
            gardenLayout: {
                beds: [],
                sunPatterns: [],
                soilType: '',
                lastUpdate: null
            },
            plants: [],
            issues: [],
            harvests: [],
            version: '1.0.0',
            calendar: [],
            settings: { location: 'London', apiKey: '' }
        };

        // Wizard state
        let wizardState = {
            active: false,
            category: null,
            step: 0,
            answers: []
        };

        // External Knowledge Base
        let knowledgeBase = null;

        // Plant database
        let plantDatabase = {};

        // Load from localStorage
        function loadMemory() {
            const saved = localStorage.getItem('gardenbuddy_memory');
            if (saved) {
                try {
                    gardenMemory = JSON.parse(saved);
                    // Ensure new fields exist
                    if (!gardenMemory.calendar) gardenMemory.calendar = [];
                    if (!gardenMemory.settings) gardenMemory.settings = { location: 'London', apiKey: '' };
                    if (!gardenMemory.gists) gardenMemory.gists = [];
                    
                    updateStatsDisplay();
                    renderCalendar();
                } catch (e) {
                    console.error('Failed to load memory:', e);
                }
            }
        }

        // Load Knowledge Base
        async function loadKnowledgeBase() {
            try {
                const response = await fetch('https://gist.githubusercontent.com/JamesTheGiblet/a112d7f704ed1a2f1cb6595a51e6f5a8/raw/f308454349355b4567eaf2d4fea73c00af58c848/garden-buddy-ai-json');
                knowledgeBase = await response.json();
                console.log('Knowledge base loaded:', knowledgeBase.version);
            } catch (e) {
                console.error('Failed to load knowledge base:', e);
                // Fallback foundation of knowledge
                knowledgeBase = {
                    version: "1.0.0-fallback",
                    categories: {
                        lawn_care: {
                            mowing_guidelines: {
                                cool_season: "Mow high (3-4 inches)",
                                warm_season: "Mow lower (1-2 inches)"
                            },
                            watering_guidelines: {
                                general: "Water deeply and infrequently (1 inch per week)"
                            },
                            seasonal_tasks: {
