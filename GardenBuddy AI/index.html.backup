            --sky-blue: #81C784;
            
            --bg-primary: #FAFDF7;
            --bg-chat: #FFFFFF;
            --text-primary: #000000;
            --text-secondary: #222222;
            --border-color: #D4E7D0;
        }

        /* Button style classes for inline style removal */
        .share-btn {
            background-color: var(--seedling-sprout);
