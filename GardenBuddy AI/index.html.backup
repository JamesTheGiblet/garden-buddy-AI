                    gardenMemory.gardenLayout.lastUpdate = Date.now();
                }
                if (teaching.toLowerCase().includes('planted') || teaching.toLowerCase().includes('growing')) {
                    gardenMemory.gardenLayout.lastUpdate = Date.now();
                }
                
                saveMemory();
