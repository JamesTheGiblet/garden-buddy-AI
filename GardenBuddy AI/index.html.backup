        // Start Diagnostic Wizard
        function startDiagnosticWizard() {
            if (!knowledgeBase || !knowledgeBase.diagnostic_questions) {
                addMessage('assistant', "‚ö†Ô∏è Knowledge base is loading... please try again in a few seconds.");
                return;
            }
            
            const categories = Object.keys(knowledgeBase.diagnostic_questions);
            const buttons = categories.map(cat => 
                `<button class="command-hint" onclick="selectWizardCategory('${cat}')" style="margin:0.25rem; border:1px solid var(--garden-green);">${cat.replace(/_/g, ' ').toUpperCase()}</button>`
            ).join('');
            
            addMessage('assistant', `ü©∫ **Diagnostic Wizard**\nI can help identify issues. What type of problem are you seeing?\n\n<div style="display:flex; flex-wrap:wrap; gap:0.5rem; margin-top:0.5rem;">${buttons}</div>`);
        }

        // Select Wizard Category
        function selectWizardCategory(category) {
            wizardState = {
                active: true,
                category: category,
                step: 0,
                answers: []
            };
            
            // Visual feedback
            addMessage('user', `Diagnose ${category.replace(/_/g, ' ')}`);
            
            // Ask first question
            const questions = knowledgeBase.diagnostic_questions[category];
            setTimeout(() => {
                addMessage('assistant', `üìã **Question 1/${questions.length}:**\n${questions[0]}`);
            }, 600);
        }

        // Handle Wizard Step
        function handleWizardStep(userMessage) {
            const questions = knowledgeBase.diagnostic_questions[wizardState.category];
            
            // Save answer
            wizardState.answers.push({
                question: questions[wizardState.step],
                answer: userMessage
            });
            
            wizardState.step++;
            
            if (wizardState.step < questions.length) {
                return `üìã **Question ${wizardState.step + 1}/${questions.length}:**\n${questions[wizardState.step]}`;
            } else {
                // Finish
                const category = wizardState.category;
                const answers = wizardState.answers;
                
                // Save issue to memory
                gardenMemory.issues.push({
                    type: category,
                    date: new Date().toISOString(),
                    details: answers
                });
                saveMemory();
                
                // Reset state
                wizardState = { active: false, category: null, step: 0, answers: [] };
                
                // Construct summary
                let summary = answers.map(a => `‚Ä¢ **Q:** ${a.question}\n  **A:** ${a.answer}`).join('\n\n');
                
                return `‚úÖ **Diagnostic Complete**\n\nHere's what I've recorded:\n\n${summary}\n\nI've saved this to your garden history. Based on these symptoms, check the **${category.replace(/_/g, ' ')}** section in the Knowledge Base or ask me specifically about potential causes like "pests" or "diseases".`;
            }
        }

        // Helper to drive conversation based on missing info
        function getNextConversationPrompt() {
            // 1. Layout/Type
            const hasLayout = gardenMemory.teachings.some(t => 
                t.text.toLowerCase().includes('bed') || 
                t.text.toLowerCase().includes('container') || 
                t.text.toLowerCase().includes('ground') ||
                t.text.toLowerCase().includes('pot') ||
                t.text.toLowerCase().includes('balcony') ||
                t.text.toLowerCase().includes('greenhouse')
            );
            
            if (!hasLayout) {
                return `To give you better advice, I need to picture your garden. Are you growing in **raised beds**, **containers**, or directly in the **ground**?`;
            }

            // 2. Sun
            const hasSun = gardenMemory.teachings.some(t => t.text.toLowerCase().includes('sun') || t.text.toLowerCase().includes('shade'));
            if (!hasSun) {
                return `Sunlight determines what grows best. How much sun does your garden get? (e.g. "Full sun", "Morning sun only", "Mostly shade")`;
            }

            // 3. Plants
            if (gardenMemory.plants.length === 0) {
                return `I know about your layout, but what are you growing? You can tell me like "I planted tomatoes" or use the **Plants** tab to add them.`;
            }

            // General open-ended
            return `I'm learning more about your garden! Is there anything specific you're worried about right now, like pests or watering?`;
        }

        // Generate response based on message
        function generateResponse(message) {
            // Check wizard state
            if (wizardState.active) {
                return handleWizardStep(message);
            }

            const lowerMessage = message.toLowerCase();
            
            // Implicit teaching detection (Conversational Mode)
            const statementIndicators = ["i have", "my garden", "i planted", "it is", "there are", "i use", "it gets"];
            if (statementIndicators.some(indicator => lowerMessage.startsWith(indicator)) && !message.startsWith('/')) {
                // Treat as teaching if it looks like a fact
                processTeaching('/teach ' + message);
                // Return a confirmation that leads into the next prompt
                return `‚úì Got it. I've noted that down.\n\n${getNextConversationPrompt()}`;
            }

            // Command responses
            
            // Check Knowledge Base for dynamic responses
            const kbResponse = searchKnowledgeBase(lowerMessage);
            if (kbResponse) return kbResponse;

            if (message.startsWith('/teach ')) {
                const teaching = message.substring(7).trim();
                return `‚úì Learned: "${teaching}"

I've added this to my memory. What else would you like to teach me about your garden?`;
            }
            
            if (message.startsWith('/gist add ')) {
                const content = message.substring(10).trim();
                if (content) {
                    if (!gardenMemory.gists) gardenMemory.gists = [];
                    gardenMemory.gists.push({
                        content: content,
                        timestamp: Date.now()
                    });
                    saveMemory();
                    return `üìù **Gist Added**\n\n"${content}"\n\nI've saved this note for you.`;
                }
                return "Usage: /gist add [text]";
            }
            
            if (message.startsWith('/wrong')) {
                const correction = message.substring(6).trim();
                if (correction) {
                    return `‚úì Correction noted: "${correction}"

